# Market Research Visualization - Environment Configuration
# Copy this file to .env and update with your values

# ===== Server Configuration =====
HOST=0.0.0.0
PORT=8000
DEBUG=false
RELOAD=false

# ===== Security =====
# IMPORTANT: Change this in production!
JWT_SECRET_KEY=your-secret-key-change-in-production

# ===== Database =====
# For PostgreSQL (recommended for production)
DATABASE_URL=postgresql://marketviz:marketviz123@db:5432/marketviz

# For SQLite (simpler, good for development)
# DATABASE_URL=sqlite:///./data/market_viz.db

# PostgreSQL specific (for docker-compose)
POSTGRES_DB=marketviz
POSTGRES_USER=marketviz
POSTGRES_PASSWORD=marketviz123

# ===== CORS Configuration =====
# Add your frontend URLs here
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000

# ===== API Keys =====
# Optional: Alpha Vantage API key for additional data sources
ALPHA_VANTAGE_API_KEY=

# ===== Logging =====
LOG_LEVEL=INFO
LOG_FILE=logs/market_viz.log

# ===== Monitoring (Optional) =====
ENABLE_METRICS=false
SENTRY_DSN=

# ===== Background Tasks =====
ENABLE_SCHEDULER=true
MARKET_UPDATE_INTERVAL_MINUTES=15

# ===== Sample Data =====
# Set to 'true' to use sample data instead of fetching from APIs
USE_SAMPLE_DATA=false

